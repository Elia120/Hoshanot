@using Hoshanot.Web.DataAccess.DataSource;
@using Hoshanot.Web.DataAccess.Models;
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Hoshanot</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Hoshanot", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Startseite", "Index", "Home")</li>
                    <li>@Html.ActionLink("Informationen", "About", "Home")</li>
                    <li>@Html.ActionLink("Kontakt", "Contact", "Home")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @{
                        string SessionID;
                        try
                        {
                            SessionID= Request.Cookies["sessionID"].Value.ToString();
                            <li>@Html.ActionLink("Warenkorb", "ShoppingCart", "Users")</li>
                            <li>@Html.ActionLink("Dein Account", "Account", "Users")</li>
                            <li>@Html.ActionLink("Abmelden", "Logout", "Users")</li>
                        }
                        catch (Exception e)
                        {

                            <li>@Html.ActionLink("Warenkorb", "ShoppingCart", "Users")</li>
                            <li>@Html.ActionLink("Registrieren", "Register", "Users")</li>
                            <li>@Html.ActionLink("Anmelden", "Login", "Users")</li>
                        }

                    }

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Elia Sternbuch</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
